{
  "name": "bsale_ui_base",
  "description": "Proyecto base para construcci√≥n de interfaces en Bsale",
  "author": "Zamir Narro",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run server:build && npm run client:build",
    "client:dev": "vite",
    "client:build": "vite build",
    "preview": "vite preview",
    "server:dev": "nodemon server/app.js",
    "test": "npm run format:check && npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint --ignore-path .gitignore \"**/*.scss\"",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "format:write": "prettier --ignore-path .gitignore --write .",
    "start": "node server/app.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.54.0",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "svelte": "^3.49.0",
    "svelte-preprocess": "^4.10.7",
    "vite": "^3.0.0"
  },
  "dependencies": {
    "@material/button": "^14.0.0",
    "@material/ripple": "^14.0.0",
    "@material/switch": "^14.0.0",
    "@material/textfield": "^14.0.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  }
}
